---
interface Props {
	title: string;
}

const title= Astro.props.title || "Apocalypse: The Game";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		background-color: #2B1B50;
		color: white;
		width: 100%;
		height: 100%;
	}
</style>
